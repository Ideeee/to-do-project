<!DOCTYPE html>
<html>
<head>
  <title>JSON Response Example</title>
  <style>
    body {
      background-color: whitesmoke;
    }

    .parent {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .form-div {
        background-color: rgb(234, 215, 249);
        width: 50%;
        max-width: 500px;
        height: 45%;
        max-height: 500px;
        padding-left: 30px;
        padding-top: 20px;
        border-radius: 10px;
        box-shadow: 0 5px 10px rgba(48, 47, 47, 0.2);
    }


    .submit-button {
        border-radius: 10px;
        padding: 5px;
        padding-right: 7px;
        width: 92%;
        height: 30px;
        background-color: rgb(240, 71, 167);
        color: white;
        cursor: pointer;
        border: 1px solid #4b4747;
    }

    .submit-button:hover {
      background-color: rgb(209, 17, 126);
    }

    .form-field {
        border: 1px solid #4b4747;
        border-radius: 10px;
        padding: 7px;
        width: 90%;
        height: 30px; 
        margin-bottom: 10px; 
    }


  </style>
</head>
<body>
 
  <div class="parent">
    <div class="form-div">
        <form id="myForm" action="/" method="POST">

            <label>Name</label>
            <div class="col-md-6">
            <input type="text" class="form-field" id="taskname" name="name" required placeholder="Task name" /> 
            </div>
        
            <br/>
        
            <label>Description</label>
            <div class="col-md-6">
            <input type="text" class="form-field" id="desc" name="description" placeholder="Description"/>
            </div>
        
            <br/>
        
            <label>Due Date</label>
            <div class="col-md-6">
                <input type="date" class="form-field" id="dueDate" name="dueDaye" placeholder="When is it due?"/>
            </div>
            
            <br/>
            <button class="submit-button" type="submit">Add Task</button>
        
        </form>
    </div>
  </div>

  <script>

    document.getElementById('myForm').addEventListener('submit', function(event) {
      
      event.preventDefault();

      
      const formData = {};

      const Name = document.getElementById('taskname').value;
      const Description = document.getElementById('desc').value;


      formData.name = Name;
      formData.description = Description;


      fetch('/tasks', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json' 
        },
        body: JSON.stringify(formData)
      })
        .then(response => {
            if (response.ok) {
                return response.json().then(data => {
                    alert('Task added successfully!');
                });
        } else {
            return response.json().then(data => {
                alert(`Failed to add task: ${data.message}`);
            });
        }
        })        
        .catch(error => {
          console.error(error);
          alert('An error occurred while adding the task.');
        });
    });

  </script>

</body>
</html>